                                        android:textColor="@color/White" />

                                    <TextView
                                        style="@style/ScreenTextView1"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="$ 50"
                                        android:textColor="@color/White">

                                    </TextView>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:background="@color/White" />-->
                <TextView
                    style="@style/ScreenTextView1"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="70"
                    android:text="@string/receipt"
                    android:textColor="@color/White" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/food_quantity_layout" />

                <View
                    android:visibility="gone"
                    android:id="@+id/view_serviceFee"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_serviceFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Service Fee  "
                        android:textColor="@color/White"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_serviceFees"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$ 0"
                        android:textColor="@color/White">

                    </TextView>
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:id="@+id/view_deliveryFee"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_deliveryRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Delivery Charges "
                        android:textColor="@color/White"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_deliveryCharges"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$ 5"
                        android:textColor="@color/White">

                    </TextView>
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:id="@+id/view_vat"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_vatRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_vatPercentage"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/White"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_vat"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$ 0"
                        android:textColor="@color/White">

                    </TextView>
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:id="@+id/view_promo"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_Promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:text="Promo  "
                        android:id="@+id/tv_promoLabel"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/White"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_promo"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$ 0"
                        android:textColor="@color/White">

                    </TextView>
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:id="@+id/view_tip"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:text="Tip  "
                        android:id="@+id/tv_tipLabel"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/White"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_tip"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$ 0"
                        android:textColor="@color/White">

                    </TextView>
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:id="@+id/view_cartFee"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_cartFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:text="Cart Fee  "
                        android:id="@+id/tv_cartFeeLabel"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/White"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_cartFee"
                        style="@style/ScreenTextView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$ 0"
                        android:textColor="@color/White">

                    </TextView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>