<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context=".activity.job_history_details.JobHistoryDetails">

    <RelativeLayout
        android:id="@+id/hedder"
        style="@style/Heddersiz"
        android:background="@color/Greenapp">

        <ImageView
            android:id="@+id/iv_backArrow_payment"
            style="@style/BackButtonImage"
            android:src="@drawable/backbtn" />

        <TextView
            style="@style/HedderSmallsiz"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/iv_backArrow_payment"
            android:text="@string/job_history_details" />

        <TextView
            android:id="@+id/tv_support"
            style="@style/HedderSmallsiz"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/white_rount_bg"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="@string/support" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hedder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/rl_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:src="@drawable/placeholder_circle"
                            android:id="@+id/iv_restaurantImage"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp" />

                        <ImageView
                            android:layout_alignParentBottom="true"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:src="@drawable/bb_" />

                        <ImageView
                            android:visibility="invisible"
                            android:layout_centerHorizontal="true"
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/dotted_white_line" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Tv_time"
                                    style="@style/ScreenTextView1"
                                    android:layout_weight="70"
                                    android:text="@string/pick_up"
                                    android:textColor="@color/White"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/Tv_pickupAdress"
                                    style="@style/ScreenTextView1"
                                    android:layout_weight="70"
                                    android:textColor="@color/White" />
                                <TextView
                                    android:id="@+id/tv_pickUpLocation"
                                    style="@style/ScreenTextView1"
                                    android:textColor="@color/White" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight=".5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_orderPrice"
                                    style="@style/ScreenTextView1"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/white_rount_bg"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:paddingStart="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:paddingTop="@dimen/_2sdp"
                                    android:textColor="@color/White"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_itemCount"
                                    style="@style/ScreenTextView1"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:gravity="end"
                                    android:textColor="#808080"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView

                                    android:id="@+id/Tv_dropOffLabel"
                                    style="@style/ScreenTextView1"
                                    android:layout_weight="70"
                                    android:text="@string/drop_off"
                                    android:textColor="@color/White"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_dropOffAdress"
                                style="@style/ScreenTextView1"
                                android:layout_weight="70"
                                android:textColor="@color/White" />
                            <TextView

                                android:id="@+id/tv_dropOffLocation"
                                style="@style/ScreenTextView1"
                                android:textColor="@color/White" />
                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:numStars="5"
                                android:rating="5"
                                android:stepSize="1"
                                android:theme="@style/RatingBar"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />

                <RelativeLayout
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_orderIdLabel"
                        style="@style/ScreenTextView1"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/order_id_new"
                        android:textColor="@color/White" />
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/tv_orderIdLabel"
                        android:id="@+id/tv_orderId"
                        style="@style/ScreenTextView1"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textColor="@color/White"
                        android:textStyle="bold" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/iv_cardIcon"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/iv_card" />

                    <TextView
                        android:id="@+id/tv_paymentMode"
                        style="@style/ScreenTextView1"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_toEndOf="@+id/iv_cardIcon"
                        android:textColor="@color/White" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/progress_bar" />
                <!--88
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <TextView
                                        style="@style/ScreenTextView1"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="Burger"
                                        android:textColor="@color/White"
                                        android:textStyle="bold" />

                                    <TextView

                                        style="@style/ScreenTextView1"
                                        android:layout_width="0dp"
