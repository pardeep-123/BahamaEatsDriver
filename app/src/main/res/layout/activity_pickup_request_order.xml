<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Order.Boost_order">
    <RelativeLayout
        style="@style/Heddersiz"
        android:padding="@dimen/_6sdp"
        android:background="@color/Black"
        android:id="@+id/hedder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_drawable"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/nav_bar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:id="@+id/iv_dot"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:src="@drawable/dot"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:tint="@color/Greenapp" />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginStart="3dp"
                        android:layout_toEndOf="@+id/iv_dot"
                        android:text="@string/online"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_8sdp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:text="BOOST YOUR ORDERS"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_8sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bell" />

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_8sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/circle_qmark" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hedder">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp">
<TextView
   style="@style/ScreenTextView2"
    android:textSize="@dimen/_24sdp"
    android:textColor="@color/Black"
    android:layout_marginLeft="@dimen/_30sdp"
    android:text="2.3m">

</TextView>

            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/black_btn"
                android:fontFamily="@font/poppins_medium"
                android:text="Decline"
                android:gravity="center"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp">
            </TextView>

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/Btn_peakspots"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/fill_whitebackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Relativ_payment"
                android:layout_marginTop="15dp">
                <TextView
                   style="@style/ScreenTextView1"
                    android:text="PAYMENT GUARANTEED"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true">

                </TextView>

    <Button
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@drawable/cut_circle"
        android:text="81"
        android:textColor="@color/colorTextView"
        android:textSize="@dimen/_14sdp">

    </Button>
</RelativeLayout>
            <View
                android:id="@+id/View1"
                android:layout_width="match_parent"
                android:layout_height="0.80dp"
                android:layout_below="@+id/Relativ_payment"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorTextView">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/View1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/starbucks_icon" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_toEndOf="@+id/imageView4"
    android:orientation="vertical">
    <TextView
        style="@style/ScreenTextView2"
        android:text="Starbucks"
        android:textColor="@color/Black"
        android:textSize="@dimen/_15sdp"
      >
    </TextView>

    <TextView
        style="@style/ScreenTextView2"
        android:textSize="@dimen/_8sdp"
        android:text="7 Items"
  >

    </TextView>

</LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/ScreenTextView2"
                            android:text="Pick up by"
                            android:textSize="@dimen/_8sdp">
                        </TextView>

                        <TextView
                            style="@style/ScreenTextView2"
                            android:text="10:30AM"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_15sdp">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/ScreenTextView2"
                        android:text="SWIPE"
                       android:layout_gravity="center"
                        android:textSize="@dimen/_8sdp">
                    </TextView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="@drawable/plain_green_button">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/double_arrow_right" />

        <TextView
            style="@style/ScreenTextView1"
            android:text="Accept Order"
            android:textSize="@dimen/_13sdp"
            android:layout_centerInParent="true"
            android:textColor="@color/White">
        </TextView>
    </RelativeLayout>
</RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>






        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="$70.8"
                android:textColor="@color/White"
                android:textSize="@dimen/_22sdp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/black_btn">

            </Button>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>