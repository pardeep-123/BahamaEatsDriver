<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Order.Boost_order">
    <RelativeLayout
        style="@style/Heddersiz"
        android:padding="@dimen/_6sdp"
        android:background="@color/Black"
        android:id="@+id/hedder">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <ImageView
            android:id="@+id/iv_drawable"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/nav_bar" />
        </LinearLayout>
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="50"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
       >

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/dot"
            android:layout_marginTop="@dimen/_5sdp"
            android:tint="@color/Greenapp" />

        <TextView
            style="@style/ScreenTextView2"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/iv_dot"
            android:text="@string/online"
            android:textColor="@color/White"
            android:textSize="@dimen/_8sdp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/White"
        android:textSize="@dimen/_12sdp"
        android:layout_centerVertical="true"
        android:text="BOOST YOUR ORDERS"></TextView>

</LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:scaleType="fitXY"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:scaleType="fitXY"
                android:src="@drawable/circle_qmark" />


        </LinearLayout>
</LinearLayout>
    </RelativeLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:layout_below="@+id/hedder"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">
        <Button
            android:id="@+id/Btn_peakspots"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
         android:layout_centerHorizontal="true"
            android:background="@drawable/bottom_flat_border_green"
            android:text="PEAK SPOTS"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/White">

        </Button>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_below="@+id/Btn_peakspots"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/fill_whitebackground">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/slected_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView1"
            android:orientation="vertical">
            <TextView
                style="@style/ScreenTextView1"
                android:text="West End"
                android:textColor="@color/Black"
                android:includeFontPadding="false"
                android:textSize="@dimen/_13sdp">

            </TextView>
           <TextView
                style="@style/ScreenTextView2"
                android:text="Bahama Avenue"
               android:textSize="@dimen/_8sdp">

            </TextView>

        </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="0dp">


                    <ImageView
                        android:id="@+id/Iv_km"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginEnd="0dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_updown_icon">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/Iv_km"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ScreenTextView2"
                            android:includeFontPadding="false"
                            android:text="2.5">

                        </TextView>

                        <TextView
                            style="@style/ScreenTextView2"
                            android:text="miles"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/_8sdp">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.80dp"
                   android:background="@color/colorTextView"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_marginRight="@dimen/_10sdp">

               </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/imageViewB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/unslected_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewB"
            android:orientation="vertical">
            <TextView
                style="@style/ScreenTextView1"
                android:text="Baillihou"
                android:textColor="@color/Black"
                android:includeFontPadding="false"
                android:textSize="@dimen/_13sdp">

            </TextView>
           <TextView
                style="@style/ScreenTextView2"
                android:text="Hill Street"
               android:textSize="@dimen/_8sdp">

            </TextView>

        </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="0dp">


                    <ImageView
                        android:id="@+id/Iv_km2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginEnd="0dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_updown_icon">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/Iv_km2"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ScreenTextView2"
                            android:includeFontPadding="false"
                            android:text="4.5">

                        </TextView>

                        <TextView
                            style="@style/ScreenTextView2"
                            android:text="miles"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/_8sdp">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.80dp"
                   android:background="@color/colorTextView"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_marginRight="@dimen/_10sdp">

               </View>


               <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/imageViewE"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/unslected_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageViewE"
            android:orientation="vertical">
            <TextView
                style="@style/ScreenTextView1"
                android:text="Eggnig Frappuccino"
                android:textColor="@color/Black"
                android:includeFontPadding="false"
                android:textSize="@dimen/_13sdp">

            </TextView>
           <TextView
                style="@style/ScreenTextView2"
                android:text="560 cl, mixed with sugar"
               android:textSize="@dimen/_8sdp">

            </TextView>

        </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="0dp">


                    <ImageView
                        android:id="@+id/Iv_km3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginEnd="0dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_updown_icon">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/Iv_km3"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ScreenTextView2"
                            android:includeFontPadding="false"
                            android:text="5.2">

                        </TextView>

                        <TextView
                            style="@style/ScreenTextView2"
                            android:text="miles"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/_8sdp">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


           </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>