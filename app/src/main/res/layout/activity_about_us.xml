<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context=".activity.Navigation.AboutUs">
    <RelativeLayout
        style="@style/Heddersiz"
        android:background="@color/Greenapp"
        android:id="@+id/hedder">
        <ImageView
            style="@style/BackButtonImage"
            android:id="@+id/iv_backArrowabout"
            android:onClick="iv_backArrowabout"
            android:src="@drawable/backbtn"
            android:tint="@color/White"/>

        <TextView
            style="@style/HedderSmallsiz"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:text="@string/about_us"></TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_20sdp"
        android:layout_below="@+id/hedder">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:text="An ABC are the first three letters of the Latin script known as the alphabet. ABC or abc may also refer to: Contents. 1 Arts, entertainment, and media. ABC are the first three letters of the Latin script known as the alphabet. ABC or abc may also refer to: Contents. 1 Arts, entertainment, and media."
            android:textColor="@color/White">

        </TextView>

    </RelativeLayout>
</RelativeLayout>