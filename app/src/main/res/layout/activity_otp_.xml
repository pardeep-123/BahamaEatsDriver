<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".activity.Otp.Otp_Fill_Activity">

    <RelativeLayout
        android:id="@+id/Relativ_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_layout" />

        <ImageView
            android:id="@+id/Image_icon"
            style="@style/ImageIcon"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Relativ_otp"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_otp"
            android:textColor="@color/White"
            android:textSize="@dimen/_8sdp" />

        <LinearLayout
            android:id="@+id/layout_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/editTextone"
                style="@style/Otptext"
                android:nextFocusRight="@+id/editText_two">

                <!--<requestFocus />-->
            </EditText>

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/editTexttwo"
                style="@style/Otptext" />

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/editTextthree"
                style="@style/Otptext" />

            <EditText
                android:imeOptions="actionDone"
                android:id="@+id/editTextfour"
                style="@style/Otptext" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_ValidateOtp"
            style="@style/CustomButton"
            android:text="@string/validate" />

        <LinearLayout
            android:id="@+id/ll_remaining_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Login_layout"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_validateCodeLabel"
                android:layout_width="@dimen/_120sdp"
                style="@style/ScreenTextView2"
                android:layout_gravity="center"
                android:text="@string/validate_code_in"
                android:gravity="end"
                android:textColor="@color/White"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:visibility="visible" />
            <TextView
                android:layout_width="@dimen/_11sdp"
                android:id="@+id/tv_Remaining_time"
                style="@style/ScreenTextView2"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="end"
                android:textColor="@color/White"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="@dimen/_30sdp"
                android:id="@+id/tv_seconds"
                style="@style/ScreenTextView2"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:text="s"
                android:textColor="@color/White"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_resend_otp"
            style="@style/ScreenTextView2"
            android:layout_below="@+id/Login_layout"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_45sdp"
            android:drawableLeft="@drawable/arrawright"
            android:drawablePadding="@dimen/_3sdp"
            android:drawableTint="@color/Greenapp"
            android:text="@string/resend_otp"
            android:textColor="@color/colorTextView"
            android:textSize="@dimen/_7sdp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>