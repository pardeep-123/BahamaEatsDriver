<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_back"
        app:cardCornerRadius="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:id="@+id/Relativ_sidecard"
            android:visibility="gone"
            android:background="@drawable/theme_bg">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Relativ_sch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp">

<LinearLayout
    android:id="@+id/LL_L"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView3">
                <TextView
                    android:id="@+id/tv_starttime"
                    style="@style/ScreenTextView1"
                    android:text="11:30"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="20dp">

                </TextView>
                <TextView
                    style="@style/ScreenTextView1"
                    android:text="AM"
                    android:textSize="@dimen/_8sdp"
                    >
                </TextView>
                <TextView
                    style="@style/ScreenTextView1"
                    android:text="-"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="10dp">

                </TextView>


                <TextView
                    android:id="@+id/tv_endtime"
                    style="@style/ScreenTextView1"
                    android:text="11:30"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="10dp">

                </TextView>
                <TextView
                    style="@style/ScreenTextView1"
                    android:text="PM"
                    android:textSize="@dimen/_8sdp"
                    >
                </TextView>
            </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_weight="70">


            <Button
                android:id="@+id/Button_select"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/outlin2"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_medium"
                android:text="EDIT"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/colorTextView"
                android:textSize="@dimen/_6sdp">
            </Button>
    </RelativeLayout>
</LinearLayout>

            <Button
                android:id="@+id/Button_aviliable"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_below="@+id/LL_L"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="UNAVAILED"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="@dimen/_6sdp"
                android:textColor="@color/colorTextView"
                android:background="@drawable/btn_outline">

            </Button>
        </RelativeLayout>


        <View
            android:id="@+id/View1"
            android:layout_width="match_parent"
            android:layout_height="0.80dp"
            android:layout_below="@+id/Relativ_sch"
            android:background="@color/colorTextView">

        </View>
    </androidx.cardview.widget.CardView>
</RelativeLayout>