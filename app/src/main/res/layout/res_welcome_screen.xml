<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_25sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/Relativ_welcomS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/Card_welcom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_5sdp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/Image_tree_icon"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_tree_icon">
    </ImageView>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="@color/Greenapp"
    android:textStyle="bold"
    android:padding="@dimen/_8sdp"
    android:textSize="@dimen/_13sdp"
    android:layout_below="@+id/Image_tree_icon"
    android:text="Password has been sent on your mail.">

</TextView>
</RelativeLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Relativ_welcomS"
        android:layout_marginTop="-15dp">

        <TextView
            android:id="@+id/tv_procced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="@dimen/_9sdp"
            android:gravity="center"
            android:textColor="@color/White"
            android:background="@drawable/borderasset100">

        </TextView>
    </RelativeLayout>

</RelativeLayout>