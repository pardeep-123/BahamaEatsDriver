                    <TextView
                        android:text="Home"
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_paymentstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navwallat" />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="Earnings" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:id="@+id/ll_wallet"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navwallat" />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/wallet" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/LL_deliveries"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navdelivery" />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/deliveries" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/LL_support"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navphone"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="Contact Us" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/LL_notification"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/ic_notification_icon"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/notifications" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="visible"
                    android:id="@+id/LL_TandC"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/tandcond"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="Terms and Conditions" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LL_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navsetting"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="Settings" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_trainingVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navtraining"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/training" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/help_green"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="@string/faqs" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navdocument"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="Documents" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_refer_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navrefer"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="Refer/Invite Friends" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/NavIcon"
                        android:src="@drawable/navlogout"
                        />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp"
                        android:text="Logout" />
                </LinearLayout>
            </LinearLayout>
                </ScrollView>
            </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="39.50">

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/white_small_box">

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:id="@+id/Relative_offlineN"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="1dp"
                    >

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/offline_car_btn2">
                    </ImageView>

                    <TextView
                        style="@style/ScreenTextView1"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:text="Offline"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_6sdp">

                    </TextView>
                </RelativeLayout>
