<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="32"

            android:padding="@dimen/_10sdp"
            android:id="@+id/toplayout"
            android:background="@drawable/nav_background">

            <RelativeLayout
                android:id="@+id/Relativ_profile"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:id="@+id/iv_Profile_image">

                </com.mikhaellopez.circularimageview.CircularImageView>

                <TextView
                    android:id="@+id/tv_driverName"
                    style="@style/ScreenTextView2"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold">

                </TextView>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_processing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Relativ_profile"
                android:visibility="gone"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/progress25">
                            </ImageView>
                        </RelativeLayout>

                    <TextView
                       style="@style/ScreenTextView1"
                        android:paddingTop="2dp"
                        android:text="Acceptance"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/White"
                        android:textSize="10sp" />
                    <TextView
                       style="@style/ScreenTextView1"
                        android:text="Rate"
                        android:includeFontPadding="false"
                        android:textColor="@color/White"
                        android:textSize="10sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/progress45">
                            </ImageView>
                            <TextView
                                style="@style/ScreenTextView1"
                                android:paddingTop="2dp"
                                android:text="45"
                                android:layout_centerInParent="true"
                                android:textColor="@color/White"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    <TextView
                       style="@style/ScreenTextView1"
                        android:paddingTop="2dp"
                        android:text="Completion"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/White"
                        android:textSize="10sp" />
                    <TextView
                       style="@style/ScreenTextView1"
                        android:text="of order"
                        android:includeFontPadding="false"
                        android:textColor="@color/White"
                        android:textSize="10sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/progress60">
                            </ImageView>
                        </RelativeLayout>

                    <TextView
                       style="@style/ScreenTextView1"
                        android:paddingTop="2dp"
                        android:text="on Time"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/White"
                        android:textSize="10sp" />
                    <TextView
                       style="@style/ScreenTextView1"
                        android:text="Delivery"
                        android:includeFontPadding="false"
                        android:textColor="@color/White"
                        android:textSize="10sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/progress60">
                            </ImageView>
                        </RelativeLayout>

                    <TextView
                       style="@style/ScreenTextView1"
                        android:paddingTop="2dp"
                        android:text="Average"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:textColor="@color/White"
                        android:textSize="10sp" />
                    <TextView
                       style="@style/ScreenTextView1"
                        android:text="Rating"
                        android:includeFontPadding="false"
                        android:textColor="@color/White"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="63"
