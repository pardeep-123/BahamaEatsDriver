<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_15sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_12sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_bannerRoot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/iv_imageThumbail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/dummy_img"
                    android:visibility="visible"
                    app:siRadius="@dimen/_5sdp" />

                <RelativeLayout
                    android:id="@+id/rl_closeRootLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_close"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_openCloseStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/iv_favIcon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:padding="2dp"
                    android:src="@drawable/ic_unlike" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_bannerRoot"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/root1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/tv_restaurantName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/tv_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_restaurantName"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/tv_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_categories"
                        android:text="@string/deals"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_discountRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/green_right_round_shape_bg"
                android:padding="@dimen/_4sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_discountRoot"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/white_right_round_shape_bg"
                android:padding="@dimen/_4sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/iv_location"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_navigate" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
