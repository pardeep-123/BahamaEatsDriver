<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".activity.Navigation.SettingsActivity">

    <RelativeLayout
        android:id="@+id/hedder"
        style="@style/Heddersiz"
        android:background="@color/Greenapp">

        <ImageView
            android:id="@+id/iv_backArrow_setting"
            style="@style/BackButtonImage"
            android:contentDescription="@string/app_name"
            android:onClick="iv_backArrow_setting"
            android:src="@drawable/backbtn" />

        <TextView
            style="@style/HedderSmallsiz"
            android:layout_centerInParent="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="@string/settings" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hedder"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/LL_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/account_settings"
                        android:textAllCaps="true"
                        android:textColor="@color/LLgray">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Card_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/bel" />

                                <ImageView
                                    android:id="@+id/iv_on_notification"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="0dp"
                                    android:src="@drawable/togalbuttn"
                                    android:visibility="gone">

                                </ImageView>

                                <ImageView
                                    android:id="@+id/Iv_offnotification"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="0dp"
                                    android:src="@drawable/off_togel">

                                </ImageView>

                                <TextView
                                    style="@style/ScreenTextView1"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:layout_toEndOf="@+id/imageView3"
                                    android:text="@string/push_notification">

                                </TextView>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Litgray" />


                            <RelativeLayout
                                android:id="@+id/Relativ_changepassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:onClick="Relativ_changepassword"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/key" />


                                <TextView
                                    style="@style/ScreenTextView1"
                                    android:layout_marginStart="50dp"
                                    android:layout_toEndOf="@+id/imageView4"
                                    android:text="@string/change_password">

                                </TextView>

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="0dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/arrow_right">

                                </ImageView>


                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Litgray" />

                            <RelativeLayout
                                android:id="@+id/Relativ_documents"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="Relativ_documents"
                                android:padding="@dimen/_10sdp">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <ImageView

                                        android:id="@+id/imageView5"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/document" />


                                    <TextView
                                        style="@style/ScreenTextView1"
                                        android:layout_marginStart="50dp"
                                        android:layout_toEndOf="@+id/imageView5"
                                        android:text="@string/documents">

                                    </TextView>

                                </RelativeLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Litgray" />

                            <RelativeLayout
                                android:id="@+id/Relativ_availability"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="Relativ_availability"
                                android:padding="@dimen/_10sdp"
                                android:visibility="visible">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_centerVertical="true"
                                        android:padding="@dimen/_2sdp"
                                        android:src="@drawable/ic_availability" />


                                    <TextView
                                        style="@style/ScreenTextView1"
                                        android:layout_marginStart="50dp"
                                        android:layout_toEndOf="@+id/imageView6"
                                        android:text="@string/availability" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <View

                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Litgray"
                                android:visibility="visible" />

                            <RelativeLayout
                                android:id="@+id/Relativ_bankDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="goToBackDetails"
                                android:padding="@dimen/_10sdp"
                                android:visibility="visible">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <ImageView
                                        android:id="@+id/imageView7"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_centerVertical="true"
                                        android:padding="@dimen/_2sdp"
                                        android:src="@drawable/bank_details" />


                                    <TextView
                                        style="@style/ScreenTextView1"
                                        android:layout_marginStart="50dp"
                                        android:layout_toEndOf="@+id/imageView7"
                                        android:text="@string/bank_details" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Litgray"
                                android:visibility="visible" />

                            <View
                                android:layout_width="40dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:background="@color/LLgray" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LL_1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/general_setting"
                        android:textColor="@color/LLgray">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/Relativ_TandCond"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:onClick="Relativ_TandCond"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/iv_termscondition"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/tandc" />


                                <TextView
                                    style="@style/ScreenTextView1"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="50dp"
                                    android:layout_toEndOf="@+id/iv_termscondition"
                                    android:text="@string/terms_and_conditions">

                                </TextView>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Litgray" />


                            <RelativeLayout
                                android:id="@+id/Relativ_Aboutus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:onClick="Relativ_Aboutus"
                                android:padding="@dimen/_10sdp">


                                <ImageView
                                    android:id="@+id/iv_about"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"

                                    android:layout_centerVertical="true"
                                    android:src="@drawable/circle_info" />


                                <TextView
                                    style="@style/ScreenTextView1"
                                    android:layout_marginStart="50dp"
                                    android:layout_toEndOf="@+id/iv_about"
                                    android:text="@string/about">

                                </TextView>


                            </RelativeLayout>

                            <View
                                android:layout_width="40dp"
                                android:layout_height="4dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:background="@color/LLgray" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>