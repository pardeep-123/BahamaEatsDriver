<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_2sdp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_pickUpLabel"
                style="@style/ScreenTextView2"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/pickup_from"
                android:textColor="@color/White" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_pickUpFrom"
                    style="@style/ScreenTextView2"
                    android:text="@string/subway"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_pickUpFromTime"
                    style="@style/ScreenTextView2"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_thin"
                    android:text="@string/_10_30_am"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_dropOffLabel"
                style="@style/ScreenTextView2"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/drop_off_to"
                android:textColor="@color/White" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_userAddress"
                    style="@style/ScreenTextView2"
                    android:text="@string/subway"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_dropOffTime"
                    style="@style/ScreenTextView2"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_thin"
                    android:text="@string/_10_30_am"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <!--<TextView
                android:id="@+id/tv_userAddress"
                style="@style/ScreenTextView2"
                android:textColor="@color/White" />-->

            <TextView
                android:id="@+id/tv_userEmail"
                style="@style/ScreenTextView2"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/tv_ContactNumber"
                style="@style/ScreenTextView2"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/tv_preprationTime"
                style="@style/ScreenTextView2"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/green_border_round"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/Greenapp"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_specialRequest"
                style="@style/ScreenTextView2"
                android:text="@string/note_select_the_main_market_street_in_l_7_and_more_left_to_the_md_mall_the_order_will_be_picked"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/white_border_round"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_13sdp"
                android:background="@color/Litgray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/ScreenTextView2"
                    android:text="@string/order_id"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:textColor="@color/White"
                    android:id="@+id/tv_orderId"
                    style="@style/ScreenTextView2"
                    android:text="@string/_111" />
            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/Litgray" />

            <TextView
                style="@style/ScreenTextView2"
                android:layout_width="wrap_content"
                android:text="@string/order_items"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_orderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/order_details_quantity_row_layout" />


            <LinearLayout
                android:id="@+id/ll_subTotalRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ScreenTextView2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/order_total"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    style="@style/ScreenTextView2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_orderPrice"
                    style="@style/ScreenTextView2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/White" />
            </LinearLayout>

            <View
                android:id="@+id/ll_subTotalRootView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/Litgray" />

            <LinearLayout
                android:id="@+id/ll_addOnsLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_addOnsLabel"
                    style="@style/ScreenTextView2"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/add_on"
                    android:textAllCaps="true"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="@string/items"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:gravity="center"
                        android:text="@string/quantity"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/ScreenTextView2"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:gravity="end"
                        android:text="@string/price"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_orderAddOnsItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/order_details_quantity_row_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    style="@style/ScreenTextView2"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/total"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:textColor="@color/White"
                    android:id="@+id/tv_totalAmountWithAll"
                    style="@style/ScreenTextView2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_paymentMode"
                style="@style/ScreenTextView2"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/white_border_round"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>